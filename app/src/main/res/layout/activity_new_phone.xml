<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TableRow
            android:padding="8dp">
            <TextView
                android:text="Manufacturer:"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/editTextManufacturer"
                android:hint="Enter the manufacturer"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:padding="5dp"/>
        </TableRow>

        <TableRow
            android:padding="8dp">
            <TextView
                android:text="Model:"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/editTextModel"
                android:hint="Enter the model"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:padding="5dp"/>
        </TableRow>

        <TableRow
            android:padding="8dp">
            <TextView
                android:text="Android Version:"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/editTextAndroidVersion"
                android:hint="Enter the Android version"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:padding="5dp"/>
        </TableRow>

        <TableRow
            android:padding="8dp">
            <TextView
                android:text="Website:"
                android:padding="5dp"/>
            <EditText
                android:id="@+id/editTextWebsite"
                android:hint="Enter the website"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:padding="5dp"/>
        </TableRow>

        <TableRow
            android:padding="8dp">

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Save" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Cancel" />

            <Button
                android:id="@+id/buttonWebsite"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Website" />

        </TableRow>
    </TableLayout>
</ScrollView>
